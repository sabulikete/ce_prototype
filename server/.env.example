# Copy this file to `.env` and fill in environment-specific secrets before running the API.
DATABASE_URL="mysql://root:root@localhost:3306/ce_app"
JWT_SECRET="replace-with-a-strong-secret"
BILLING_VISIBLE_MONTHS=12

# Invitation lifecycle configuration
